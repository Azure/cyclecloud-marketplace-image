{
    "variables": {
        "subscription_id": "",
        "location": "",
        "resource_group": "",
        "storage_account": "",
        "blob_container": "",
        "tenant_id": "",
        "client_id": "",
        "client_secret": "",
        "image_name": "",
        "image_publisher": "",
        "image_offer": "",
        "image_sku": "",
        "vm_size": "",
        "cyclecloud_install_script": "",
        "cyclecloud_installer_url": "",
        "cyclecloud_version": ""
    },
    "builders": [
        {
            "type": "azure-arm",
  
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
  
			"image_publisher": "{{user `image_publisher`}}",
			"image_offer": "{{user `image_offer`}}",
			"image_sku": "{{user `image_sku`}}",

            "resource_group_name": "{{user `resource_group`}}",
            "storage_account": "{{user `storage_account`}}",
            "capture_container_name": "{{user `blob_container`}}",
            "capture_name_prefix": "cc-{{user `cyclecloud_version`}}-{{user `image_name`}}",
  
            "os_type": "Linux",
            "vm_size":  "{{user `vm_size`}}",
            "ssh_pty": "true",
  
            "location": "{{user `location`}}",
            "disk_additional_size": [128]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "scripts/setup_cyclecloud.sh",
            "destination": "/tmp/setup_cyclecloud.sh"
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/setup_cyclecloud.sh",
                "/tmp/setup_cyclecloud.sh",
                "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
            ],
            "environment_vars": [
                "CYCLECLOUD_INSTALLER_URL={{user `cyclecloud_installer_url`}}",
                "CYCLECLOUD_VERSION={{user `cyclecloud_version`}}"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true
        }
    ]
}
  
